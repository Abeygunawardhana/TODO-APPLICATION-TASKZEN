<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".dev_info">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:src="@drawable/setting_rectangular" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:fontFamily="@font/poppins_bold"
                android:text="About App"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                app:srcCompat="@drawable/back" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="25dp">


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="451dp"
            android:layout_height="270dp"
            android:layout_gravity="center"
            android:paddingTop="90dp"
            android:src="@drawable/tasksen" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/poppins"
            android:text="Developer Name"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_backgrond_devinfor"
            android:text="R.L.S.J.Abeygunawardhana"
            android:fontFamily="@font/poppins_bold"
            android:layout_gravity="center"
            android:paddingLeft="16dp"
            android:textColor="#868484"
            android:textColorHint="#868484"
            android:textSize="16dp" />



        <TextView
            android:id="@+id/Student_Number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins"
            android:text="Student Number"
            android:textColor="@color/black"
            android:textSize="14dp"

            />

        <TextView
            android:id="@+id/st_id1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_backgrond_devinfor"
            android:text="2021t01190"
            android:fontFamily="@font/poppins_bold"
            android:layout_gravity="center"
            android:paddingLeft="16dp"
            android:textColor="#868484"
            android:textColorHint="#868484"
            android:textSize="16dp" />


        <TextView
            android:id="@+id/st_id2"
            android:layout_width="317dp"
            android:layout_height="117dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_background_devinfor_last_squre"
            android:fontFamily="@font/poppins_bold"
            android:paddingLeft="16dp"
            android:text="Task Zen :\nTask Zen is a task management app that helps you to track your daily tasks."
            android:textColor="#868484"
            android:textColorHint="#868484"
            android:textSize="15dp" />




        <Button
            android:id="@+id/userprofile"
            android:layout_width="318dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="left"
            android:text="User Profile"
            android:textSize="14dp"
            android:drawableEnd="@drawable/username"
            android:background="@drawable/add_task_button"/>

        <Button
            android:id="@+id/logout"
            android:layout_width="318dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:text="Log out"
            android:textSize="14dp"
            android:drawableEnd="@drawable/logout"
            android:background="@drawable/add_task_button"/>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
