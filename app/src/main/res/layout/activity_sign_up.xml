<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".sign_up">

    <TextView
        android:id="@+id/createaccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:paddingTop="170dp"
        android:textColor="@color/black"
        android:text="Create Account"
        android:textSize="24dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/fill_your_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:paddingTop="2dp"
        android:text="Fill your information below or register"
        android:textColor="@color/black"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/with_your_social_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:text="with your social account."
        android:textColor="@color/black"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:hint="Name"
        android:paddingLeft="18dp"
        android:textColor="#868484"
        android:textColorHint="#868484"
        android:textSize="13sp" />

    <EditText
        android:id="@+id/create_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:hint="email"
        android:paddingLeft="18dp"
        android:textColor="#868484"
        android:textColorHint="#868484"
        android:textSize="13sp" />

    <EditText
        android:id="@+id/create_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="18dp"
        android:textColor="#868484"
        android:textColorHint="#868484"
        android:textSize="13sp" />


    <EditText
        android:id="@+id/create_confirm_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:paddingLeft="18dp"
        android:textColor="#868484"
        android:textColorHint="#868484"
        android:textSize="13sp" />


    <Button
        android:id="@+id/button_sign_up"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/rounded_button"
        android:gravity="center"
        android:text="Sign Up"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_light"
        android:gravity="center"
        android:text="Or Login with"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/social_media" />



    <TextView
        android:id="@+id/textView_again_log"
        android:paddingTop="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/poppins_light"
        android:gravity="center"
        android:text="@string/already_have_account"
        android:textColor="@color/black"
        android:textSize="12sp" />


</LinearLayout>